<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_bg"
    android:inAnimation="@anim/fade_in"
    android:isScrollContainer="true"
    android:outAnimation="@anim/fade_out" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scanning" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/clipboard_info"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:fastScrollEnabled="true"
                android:listSelector="@color/base_transparent"
                android:paddingLeft="@dimen/list_margin"
                android:paddingRight="@dimen/list_margin" >
            </ListView>

            <TextView
                android:id="@android:id/empty"
                style="@style/base_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/this_folder_is_empty"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/clipboard_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/clipboard_content"
                style="@style/base_item_text"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_toStartOf="@+id/clipboard_separator"
                android:layout_weight="1"
                android:background="@drawable/widget_click_selector"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="@drawable/notificaion_verline" >
            </LinearLayout>

            <TextView
                android:id="@+id/clipboard_action"
                style="@style/base_item_text"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/widget_click_selector"
                android:clickable="true"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

</ViewFlipper>