<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_bg"
    android:inAnimation="@anim/fade_in"
    android:isScrollContainer="true"
    android:outAnimation="@anim/fade_out" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/progress_wheel"
                style="@style/materialProgress"
                wheel:matProg_barColor="@color/blue_1ca0ec"/>

        <TextView
                android:id="@+id/tv_loading_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scanning"/>

        <TextView
                android:id="@+id/tv_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/scanning"
                android:visibility="gone"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/clipboard_info"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ListView
                android:id="@android:id/list"
                style="@style/base_card_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:fastScrollEnabled="false" >
            </ListView>

            <TextView
                android:id="@android:id/empty"
                style="@style/base_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/this_folder_is_empty"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/clipboard_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/clipboard_content"
                style="@style/base_item_text"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_toStartOf="@+id/clipboard_separator"
                android:layout_toLeftOf="@+id/clipboard_separator"
                android:layout_weight="1"
                android:background="@drawable/widget_click_selector"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="@drawable/notifier_divider" >
            </LinearLayout>

            <TextView
                android:id="@+id/clipboard_action"
                style="@style/base_item_text"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/widget_click_selector"
                android:clickable="true"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

</ViewFlipper>