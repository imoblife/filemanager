<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/base_titlebar2" />

    <include
        android:id="@+id/function_layout"
        layout="@layout/home_function_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlebar"
        android:layout_marginTop="12dp" />

    <RelativeLayout
        android:id="@+id/rl_content_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@+id/function_layout">

        <com.iconics.view.IconicsImageView
            android:id="@+id/iv_icon_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            app:iiv_background_color="@color/blue_1ca0ec"
            app:iiv_color="@color/white"
            app:iiv_content_ratio="1.8"
            app:iiv_corner_radius="5dp"
            app:iiv_icon="FMT_ICON_INTERNAL" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_content_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@+id/rl_content_1">

        <com.iconics.view.IconicsImageView
            android:id="@+id/iv_icon_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            app:iiv_background_color="@color/blue_1ca0ec"
            app:iiv_color="@color/white"
            app:iiv_content_ratio="1.8"
            app:iiv_corner_radius="5dp"
            app:iiv_icon="FMT_ICON_SD" />

    </RelativeLayout>

</RelativeLayout>